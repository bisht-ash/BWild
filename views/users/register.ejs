<%layout('layouts/boilerplate')%>
<div class="row my-5">
    <div class="col-6 offset-3" style="background-color:#e5e5e5;">
        <h1 class="text-center my-5">Register</h1>
        <form class= 'container needs-validation' action="/register" method="POST" novalidate>
            <div class='row mt-3'>
                <div class="col">
                    <label class = 'form-label' for="name">Name</label>
                    <input class='form-control' type="text" id="name" name="name" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
            </div>
            <div class='row mt-3'>
                <div class="col">
                    <label class = 'form-label' for="email">Email</label>
                    <input class='form-control' type="email" id="email" name="email" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
            </div>
            <div class='row mt-3'>
                <div class="col">
                    <label class = 'form-label' for="username">Username</label>
                    <input class='form-control' type="text" id="username" name="username" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col">
                    <label class= 'form-label' for="password">Password</label>
                    <input class='form-control' type="password" id="password" name="password" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-center">
                <div class="my-5">
                    <button type="submit" class='btn btn-outline-dark form-control'>Register</button>
                </div>
            </div>
        </form>
    </div>
</div>
    